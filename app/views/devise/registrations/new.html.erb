<div id="right-bar" class="column-a">
	<!--column-a-->
	<section id="register-bar" class="widget">
		<h4 class="widget-title">Register</h4>
		<div style=" padding:2% 2% 2% 2%">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<label class="form-label">Username</label>
			<%= f.email_field :email , autofocus:true, :placeholder=>'email address',:class=>'form-input'%>
			<div class="clear"></div>
			<label class="form-label">Password<% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></label>
			<%= f.password_field :password, autocomplete: "off",:placeholder=>'password', :class=>'form-input'%>
			<div class="clear"></div>
			<label class="form-label">Confirm Password</label>
			<%= f.password_field :password_confirmation, autocomplete: "off",:placeholder=>'password', :class=>'form-input'%>
			<div class="clear" style="margin-top:5px;"></div>
			<div class="kp-color-button" align="right">
				<%= link_to 'Back to Login', new_user_session_path,:class=>'orange-button' %>
				<%= f.submit 'Sign up', :class=>'red-button'%>
				<%= devise_error_messages! %>
				<% end %>
			</div>
		</div>
	</section><!--widget-->
</div><!--column-a-->

