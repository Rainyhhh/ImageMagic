<!DOCTYPE html>
<html>
	<head>
		<title>Image Magick</title>
		<!-- <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %> -->
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag "reset", :media => "all" %>
		<%= stylesheet_link_tag "prettyPhoto", :media => "screen" %>
		<%= stylesheet_link_tag "adipoli", :media => "screen" %>
		<%= stylesheet_link_tag "style", :media => "all" %>
		<%= stylesheet_link_tag "responsive"%>
		<%= csrf_meta_tags %>
		<style>
			.widget .active {
				color: #F2472D;
			}
			li {
				font-size: 15px;
				font-family: "Comic Sans MS";
			}
			label {
				font-size: 15px;
			}
		    a:hover img {
				opacity: 0.5;
			}
		</style>
	</head>

	<body class="sub-page">
		<header id="header" style="margin-bottom: 50px; ">
			<div id="header-top">
				<div class="wrapper">
					<nav id="main-nav" class="clearfix">
						<ul id="main-menu" class="clearfix">
							<li class="home-menu-item current-menu-item">
								<a href='/'>Home</a>
							</li>
							<li class="home-menu-item">
								<a>About</a>
							</li>
							<li class="home-menu-item">
								<a>Contact us</a>
							</li>
							<% if user_signed_in? %>
							<li style="float: right; margin-left: -30px;" class="home-menu-item">
								<%= link_to "Log Out", destroy_user_session_url %>
							</li>
							<li style="float: right;" class="home-menu-item">
								<a><%= current_user.email %></a>
							</li>
							<% end %>
						</ul><!--main-menu-->

					</nav><!--main-nav-->
				</div><!--wrapper-->
			</div><!--header-top-->
			<div id="header-bottom">
				<div class="wrapper clearfix">
					<div id="logo-image">
						<h1 style="font-size:70px;margin-top:10px;">Image Magick<img class="responsive-img" src="<%= asset_path 'logo.png' %>" style="width:30px;margin-top: -40px;"></h1>
					</div><!--logo-image-->
				</div><!--wrapper-->
			</div><!--header-bottom-->
		</header><!--header-->
		<div class="wrapper clearfix" style="margin-top:-40px;margin-bottom: 20px; ">
			<div id="main-content">
				<div id="main-content-inner">
					<div class="main-content-top clearfix">
						<div class="breadcrumb clearfix">
							<span class="current-page">Manage my Images</span>
						</div><!--breadcrumb-->
					</div><!--main-content-top-->
					<div class="main-content-bottom clearfix">
						<div class="column-a">
							<div class="">
								<section class="widget">
									<h4 class="widget-title">My Images</h4>
									<ul class="star-list-2" data-no-turbolinks>
										<li class="clearfix">
											<%= link_to 'View my Images', {controller: 'images', action: 'index'}, :id => 'view' , :class => 'menu-item' %>
										</li>
										<li class="clearfix">
											<%= link_to 'Upload New Image', new_image_path, :id => 'upload', :class => 'menu-item' %>
										</li>
										<li class="clearfix">
											<%= link_to 'My trash', trash_path, :id => 'trash', :class => 'menu-item' %>
										</li>
									</ul><!--older-posts-->
								</section><!--widget-->
								<section class="widget">
									<h4 class="widget-title">Shared Images</h4>
									<ul class="list-container-1 star-list-2">
										<li class="clearfix">
											<%= link_to 'View Images', shared_images_path, :id => 'view2' , :class => 'menu-item' %>
										</li>
									</ul><!--older-posts-->
								</section><!--widget-->
								<div class="clear"></div>
							</div>
						</div><!--column-a-->
						<div class="column-b" style="margin-bottom: 50px;">
							<%= yield %>
						</div>
					</div>
				</div>
			</div>
			<p id="back-top">
				<a href="#top">Back to Top</a>
			</p>
		</div>

	</body>
	<%= javascript_include_tag 'custom' %>

</html>
